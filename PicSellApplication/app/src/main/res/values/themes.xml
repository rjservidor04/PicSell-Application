<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PicSellApplication" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_100</item>
        <item name="colorPrimaryVariant">@color/orange_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_300</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

<!-- rd-themes-->
    <style name="spinner_items_style" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/gold_orange</item>
    </style>
    <style name="Theme.PicSellApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/gold_orange</item>
        <item name="android:textColor">@color/gold_orange</item>
        <item name="android:colorPrimary">@color/gold_orange</item>
        <item name="colorOnPrimary">@color/gold_orange</item>
    </style>
    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">

        <!-- Put the two options, colorAccent and android:colorAccent. -->
        <item name="colorAccent">@color/gold_orange</item>
        <item name="android:colorPrimary">@color/gold_orange</item>
        <item name="android:colorPrimaryDark">@color/gold_orange</item>
        <item name="android:colorAccent">@color/gold_orange</item>
    </style>

    <style name="Theme.PicSellApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PicSellApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>