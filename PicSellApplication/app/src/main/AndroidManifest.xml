<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.picsellapplication">

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/picsell_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/picsell_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PicSellApplication"
        tools:targetApi="31">

        <activity
            android:name=".ViewItemDetails"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".YearPickerDialog"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MonthYearDialog"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MainFragmentActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".LoginController"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PicSellApplication.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterController"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PicSellApplication.NoActionBar"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".InventoryController"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PicSellApplication.NoActionBar"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".AddInventoryItemController"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PicSellApplication.NoActionBar"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".RemoveInventoryItemView"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PicSellApplication.NoActionBar"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".UpdateInventoryItemView"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PicSellApplication.NoActionBar"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".SelectItem"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PicSellApplication.NoActionBar"
            android:windowSoftInputMode="adjustResize">
        </activity>



    </application>

</manifest>