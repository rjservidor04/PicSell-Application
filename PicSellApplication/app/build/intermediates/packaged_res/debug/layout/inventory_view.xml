<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inventory_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InventoryView">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLogoName5"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/button2"
        android:clickable="false"
        android:text="Beverage" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVInventory2"
        android:layout_width="123dp"
        android:layout_height="372dp"
        android:layout_below="@+id/tvLogoName5"
        android:layout_marginStart="142dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/idRVInventory3"
        android:background="#009C27B0">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVInventory"
        android:layout_width="246dp"
        android:layout_height="375dp"
        android:layout_below="@+id/tvLogoName5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="-104dp"
        android:layout_toStartOf="@+id/idRVInventory2"
        android:background="#009C27B0">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVInventory3"
        android:layout_width="131dp"
        android:layout_height="375dp"
        android:layout_below="@+id/tvLogoName5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="6dp"
        android:background="#009C27B0">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tvLogoName5"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:text="Your Inventory"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idRVInventory3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="282dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_buttons"
        android:clickable="true"
        android:text="Add Item"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnUpdateItem"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnHome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="291dp"
        android:background="@drawable/rounded_buttons"
        android:text="Update Item"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnRemoveItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idRVInventory"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="274dp"
        android:background="@drawable/rounded_buttons"
        android:text="Remove Item"
        android:textColor="@color/white"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idRVInventory"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_buttons"
        android:text="Home"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLogoName5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="43dp"
        android:clickable="false"
        android:text="Candies" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLogoName5"
        android:layout_marginStart="31dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/button"
        android:clickable="false"
        android:text="Junk Foods" />

</RelativeLayout>
